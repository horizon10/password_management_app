<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="Theme.KotlinPassApp" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Renk özellikleri -->
        <item name="colorPrimary">@color/dark_primary</item>
        <item name="colorPrimaryVariant">@color/dark_primary_variant</item>
        <item name="colorSecondary">@color/dark_secondary</item>
        <item name="android:colorBackground">@color/dark_background</item>
        <item name="colorSurface">@color/dark_surface</item>
        <item name="colorOnPrimary">@color/dark_on_primary</item>
        <item name="colorOnSecondary">@color/dark_background</item>
        <item name="colorOnBackground">@color/dark_on_background</item>
        <item name="colorOnSurface">@color/dark_on_surface</item>
        <item name="android:statusBarColor">@color/dark_background</item>
        <item name="android:windowLightStatusBar">false</item>
        <item name="android:navigationBarColor">@color/dark_background</item>
        <item name="android:windowBackground">@color/dark_background</item>



        <!-- Yazı tipi özellikleri -->
        <item name="android:textColorHint">@color/dark_hint</item>
        <item name="fontFamily">sans-serif</item>
    </style>

    <!-- SearchView Özel Stili -->
    <style name="SearchViewStyle" parent="Widget.AppCompat.SearchView">
        <item name="android:textColorHint">@color/dark_hint</item>
        <item name="android:textColor">@color/dark_on_surface</item>
        <item name="android:textCursorDrawable">@null</item>
    </style>

    <!-- CardView Özel Stili -->
    <style name="CardViewStyle" parent="Widget.MaterialComponents.CardView">
        <item name="cardBackgroundColor">@color/dark_surface</item>
        <item name="cardCornerRadius">16dp</item>
        <item name="cardElevation">4dp</item>
        <item name="strokeColor">@color/dark_card_stroke</item>
        <item name="strokeWidth">1dp</item>
    </style>
</resources>